package com.yezi.classdemon;

public class ClassDemon02 {

	public static void main(String[] args) {

		int sum;
		int num=100;
		System.out.println(addNum(num));
	}
/**
 * µİ¹éµ÷ÓÃ  
 * @param num
 * @return
 */
	public static int addNum(int num){
		if(num==1){
			return num;
		}else{
			return num+addNum(num-1);
		}
	}
}
